<div class="cell-tab_main">
  <div class="cell-tab_main">
    <div class="cell-tab_main_left">
      {% for block in section.blocks %}
      {% if block.settings.text != blank and block.type == celltab %}
      <div class="box">
        <img src="{{block.settings.img | img_url: 'original' }} "> 
          <div class="acc_txt">
            <span class="acc_txt_txt">{{ block.settings.text }}</span>
          </div>
        </div>

      {% endif %}
      {% endfor %}

    </div>

  </div>

  <div class="cell-tab_main_right">
      {% if section.settings.heading != blank%}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank%}
        <h2>{{ section.settings.description }}</h2>
      {% endif %}
  </div>

</div>
</div>


{% schema %}
{
"name": "Cell Tab",
"tag": "section",
"class": "spaced-section",
"settings": [
{
  "type": "text",
  "id": "heading",
  "label": "Heading"  
},
{
  "type": "richtext",
  "id": "description",
  "label": "Text"  
}
],
"blocks": [
{
  "type": "celltab",
  "name":"celltab",
  "settings": [
  {
"type": "image_picker",
"id": "img",
"label": "Image Icon"
},
{
  "type": "text",
  "id": "text",
  "label": "icon text"
  }
  
  ]
}
],
"presets": [
{
"name": "Cell Tab"
}
]
}
{% endschema %}
