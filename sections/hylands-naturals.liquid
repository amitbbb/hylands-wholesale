{% if section.settings.sec_head != blank %}
  <h2>{{ section.settings.sec_head }}</h2>  
 <div class="landing-pages-main">
  {% for block in section.blocks %} 
      {% if section.settings.settings.center_img != blank %}   
      <div class="center_img">
        <img src="{{ section.settings.center_img | img_url: 'master' }}" alt="" />
      </div>
      {% endif %}
            <h3>{{ block.settings.card_head }}</h3>
          {% endfor %}
      </div>
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "Hyland Naturals",
  "class": "hyland-naturals",  
  "settings": [
  {
    "type": "text",
    "id": "sec_head",
    "label": "Heading"
  },
  {
    "type": "image_picker",
    "id": "center_img",
    "label": "Center Image"
  }    
  ],
  "blocks": [
  {
	"type": "textbox",
	"name": "Text Card",
	"settings": [
        {
          "type": "text",
          "id": "card_head",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Text"
        }      
      ]
  }
  ] ,
  "presets": [
  {
    "name": "Hyland Naturals"
  }
  ]
}
{% endschema %}