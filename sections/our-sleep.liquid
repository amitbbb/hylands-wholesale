{% if section.settings.sec_head != blank %}
  {% for block in section.blocks %}
    <div class="c-love-cards">
        <h3>{{ block.settings.heading }}</h3>
    </div>
  {% endfor %}
{% endif %}
{% schema %}
{
  "name": "Our Sleep",
  "class": "our-sleep",
  "settings": [
  {
    "type": "text",
    "id": "sec_head",
    "label": "Heading"
  }
  ] ,
  "blocks": [
  {
	"type": "card",
	"name": "Customers Love Card",
	"settings": [
        {
          "type": "text",
          "id": "card_head",
          "label": "Star Image"
        },
        {
          "type": "image_picker",
          "id": "star_img",
          "label": "Star Image"
        },
        {
          "type": "text",
          "id": "card_text",
          "label": "Card Text"
        },
        {
          "type": "text",
          "id": "cust_name",
          "label": "Customer Name"
        }
      ]
  }
  ] ,
  "presets": [
  {
    "name": "Most Popular Cards"
  }
  ]
}
{% endschema %}